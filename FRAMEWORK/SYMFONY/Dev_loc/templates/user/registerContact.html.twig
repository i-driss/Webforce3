{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}
<section class="container my-5">
    {% include("user/partials/registerBarDev3.html.twig") %}
    <h1 class="text-center text-warning mb-3">Coordonées</h1>
    <div class="w-50 mx-auto mb-3 ">
        {% for level, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ level }}">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}
        <form method="post">
            <div class="form-group row">
                <div class="mb-3 col-6">
                    <label for="name" class="form-label">Nom</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Votre nom">
                </div>
                <div class="mb-3 col-6">
                    <label for="firstname" class="form-label">Prénom</label>
                    <input type="text" class="form-control" id="firstname" name="firstname" placeholder="Votre prénom">
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="birthday" class="form-label">Date de naissance</label>
                <input class="form-control" type="date"  id="birthday" name="birthday">
              </div>
            <div class="mb-3">
                <label for="adress" class="form-label">Adresse</label>
                <input type="text" class="form-control" id="adress" name="adress" placeholder="Votre adresse">
            </div>
            <div class="form-group row mb-3">
                <div class="mb-3 col-6">
                    <label for="city" class="form-label">Ville</label>
                    <input type="text" class="form-control" id="city" name="city" placeholder="Votre ville">
                </div>
                <div class="mb-3 col-6">
                    <label for="postal_code" class="form-label">Code postal</label>
                    <input type="number" class="form-control" id="postal_code" name="postal_code" placeholder="Votre code postal">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-warning ">Valider mes coordonées</button>
            </div>
        </form>
    </div>
    
</section>
{% endblock %}
